    "world_olympedia_olympics_athlete_bio.csv": {
      "descricao": "Biografia dos atletas olímpicos",
      "campos_principais": [
        "athlete_id - ID único do atleta",
        "name - Nome do atleta",
        "sex - Sexo (Male/Female)",
        "birth_date - Data de nascimento",
        "birth_year - Ano de nascimento",
        "height - Altura em cm",
        "weight - Peso em kg",
        "country - Nome do país",
        "country_noc - Código NOC do país",
        "description - Descrição/biografia",
        "special_notes - Notas especiais"
      ],
      "registros_aproximados": 135000
    },
    "world_olympedia_olympics_athlete_event_result.csv": {
      "descricao": "Resultados dos atletas por evento",
      "campos_principais": [
        "edition - Nome da edição dos jogos",
        "edition_id - ID da edição",
        "country_noc - Código NOC do país",
        "sport - Esporte",
        "event - Evento específico",
        "result_id - ID do resultado",
        "athlete - Nome do atleta",
        "athlete_id - ID do atleta",
        "position - Posição final",
        "medal - Tipo de medalha (Gold/Silver/Bronze)",
        "is_team_sport - Indica se é esporte coletivo"
      ],
      "registros_aproximados": 270000
    },
    "world_olympedia_olympics_country.csv": {
      "descricao": "Informações dos países participantes",
