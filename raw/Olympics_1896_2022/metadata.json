      ],
      "registros_aproximados": 230
    },
    "world_olympedia_olympics_game.csv": {
      "descricao": "Informações sobre cada edição dos jogos",
      "campos_principais": [
        "year - Ano dos jogos",
        "edition - Nome da edição",
        "edition_id - ID da edição",
        "city - Cidade sede",
        "country_flag_url - URL da bandeira do país sede",
        "country_noc - Código NOC do país sede",
        "start_date - Data de início",
        "end_date - Data de término",
        "competition_date - Datas de competição",
        "is_held - Se os jogos foram realizados"
      ],
      "registros_aproximados": 60
    },
    "world_olympedia_olympics_game_medal_tally.csv": {
      "descricao": "Contagem de medalhas por país e edição",
      "campos_principais": [
        "year - Ano dos jogos",
        "edition - Nome da edição",
        "edition_id - ID da edição",
        "country - Nome do país",
        "country_noc - Código NOC",
        "gold - Quantidade de medalhas de ouro",
        "silver - Quantidade de medalhas de prata",
        "bronze - Quantidade de medalhas de bronze",
        "total - Total de medalhas"
      ],
      "registros_aproximados": 5500
    },
    "world_olympedia_olympics_result.csv": {
      "descricao": "Resultados detalhados dos eventos",
      "campos_principais": [
        "result_id - ID único do resultado",
        "event_title - Título do evento",
        "edition - Nome da edição",
        "edition_id - ID da edição",
        "sport - Esporte",
        "result_date - Data do resultado",
        "result_location - Local da competição",
        "result_participants - Número de participantes",
